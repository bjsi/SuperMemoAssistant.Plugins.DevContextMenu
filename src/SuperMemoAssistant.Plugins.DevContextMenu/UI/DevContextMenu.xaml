<Window x:Class="SuperMemoAssistant.Plugins.DevContextMenu.UI.DevContextMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SuperMemoAssistant.Plugins.DevContextMenu.UI"
        mc:Ignorable="d"
        Height="20"
        Loaded="Window_Loaded"
        Width="20">
    <Grid>
    <Grid.RowDefinitions>
      <RowDefinition></RowDefinition>
      <RowDefinition></RowDefinition>
      <RowDefinition></RowDefinition>
      <RowDefinition></RowDefinition>
      <RowDefinition></RowDefinition>
      <RowDefinition></RowDefinition>
      <RowDefinition></RowDefinition>
      <RowDefinition></RowDefinition>
    </Grid.RowDefinitions>
    <Button Grid.Row="0"
            Name="DummyButton"
            Visibility="Hidden"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
      <Button.ContextMenu>
        <ContextMenu Name="ContextMenu1" KeyDown="ContextMenu1_KeyDown">
          <MenuItem Header="Cut"/>
          <MenuItem Header="Paste"/>
          <Separator />
          <MenuItem Header="Cut"/>
        </ContextMenu>
      </Button.ContextMenu>
    </Button>
    </Grid>
</Window>
